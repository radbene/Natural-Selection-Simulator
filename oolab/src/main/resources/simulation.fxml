<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">

    <center>
        <GridPane fx:id="mapGrid" gridLinesVisible="true" alignment="CENTER"/>
    </center>

    <top>
        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="moveDescriptionLabel" text="Map description"/>
        </VBox>
    </top>
    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <Button text="Start" onAction="#startSimulation"/>
            <Button text="New Simulation" onAction="#newGame"/>
        </VBox>
    </bottom>

</BorderPane>
